<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_ocr_receipt_form" model="ir.ui.view">
    <field name="name">ocr.receipt.form</field>
    <field name="model">ocr.document</field>
    <field name="arch" type="xml">
      <form string="Upload Receipt">
        <sheet>
          <div style="max-width:900px;">
            <h2 style="margin:0 0 6px; font-weight:700;">Upload Receipt</h2>
            <p style="color:#6b7280; margin:0 0 14px;">
              Upload a clear receipt image. Then open the document and click Run OCR.
            </p>

            <group col="2">
              <field name="doc_type" readonly="1"/>
              <field name="name"/>
              <field name="file" filename="file_filename" required="1"/>
            </group>
          </div>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
