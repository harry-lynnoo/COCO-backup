<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!-- HOME ACTION -->
    <record id="action_ocr_home" model="ir.actions.act_window">
      <field name="name">Clareo Home</field>
      <field name="res_model">ocr.document</field>
      <field name="view_mode">form</field>
      <field name="target">current</field>
      <field name="context">{}</field>
    </record>

    <!-- Upload Invoice -->
    <record id="action_upload_invoice" model="ir.actions.act_window">
      <field name="name">Upload Invoice</field>
      <field name="res_model">ocr.document</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="view_ocr_invoice_form"/>
      <field name="target">current</field>
      <field name="context">{'default_doc_type': 'invoice'}</field>
    </record>

    <!-- Upload Receipt -->
    <record id="action_upload_receipt" model="ir.actions.act_window">
      <field name="name">Upload Receipt</field>
      <field name="res_model">ocr.document</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="view_ocr_receipt_form"/>
      <field name="target">current</field>
      <field name="context">{'default_doc_type': 'receipt'}</field>
    </record>

    <!-- History -->
    <record id="action_ocr_document_history" model="ir.actions.act_window">
      <field name="name">Document History</field>
      <field name="res_model">ocr.document</field>
      <field name="view_mode">tree,form</field>
      <field name="view_id" ref="view_ocr_document_tree"/>
      <field name="search_view_id" ref="view_ocr_document_search"/>
      <field name="target">current</field>
    </record>

  </data>
</odoo>
