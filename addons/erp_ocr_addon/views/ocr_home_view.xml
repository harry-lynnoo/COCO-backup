<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_ocr_home_form" model="ir.ui.view">
        <field name="name">ocr.home.form</field>
        <field name="model">ocr.dashboard</field>
        <field name="arch" type="xml">

            <form string="Clareo">
                <sheet>

                    <!-- FULL CENTER CONTAINER -->
                    <div style="width:100%; display:flex; justify-content:center;">

                        <!-- INNER CARD -->
                        <div style="max-width:900px; width:100%; text-align:center; padding:30px 10px;">

                            <!-- TITLE -->
                            <h1 style="font-size:32px; margin-bottom:10px;">Clareo OCR Finance</h1>

                            <!-- SUBTITLE -->
                            <p style="font-size:15px; color:#666; margin-bottom:30px;">
                                Clareo automates invoice and receipt processing inside Odoo by converting
                                uploaded documents into clean structured data.
                            </p>

                            <!-- DIVIDER (Option C) -->
                            <div style="width:100%; margin:20px 0;">
                                <hr style="border:0; border-top:2px solid #c9c9c9; width:80%; margin:25px auto;"/>
                            </div>

                            <!-- BUTTON ROW -->
                            <div style="display:flex; justify-content:center; gap:20px; flex-wrap:wrap; margin-top:25px;">

                                <button string="Upload Invoice"
                                        type="action"
                                        name="%(action_upload_invoice)d"
                                        class="btn btn-primary"
                                        style="min-width:180px; height:45px; font-size:15px;"
                                />

                                <button string="Upload Receipt"
                                        type="action"
                                        name="%(action_upload_receipt)d"
                                        class="btn btn-primary"
                                        style="min-width:180px; height:45px; font-size:15px;"
                                />

                                <button string="View History"
                                        type="action"
                                        name="%(action_ocr_document_history)d"
                                        class="btn btn-secondary"
                                        style="min-width:180px; height:45px; font-size:15px;"
                                />

                                <button string="Open Dashboard"
                                        type="action"
                                        name="%(action_ocr_dashboard_analytics)d"
                                        class="btn btn-secondary"
                                        style="min-width:180px; height:45px; font-size:15px;"
                                />

                            </div>

                        </div>

                    </div>

                </sheet>
            </form>

        </field>
    </record>
</odoo>
