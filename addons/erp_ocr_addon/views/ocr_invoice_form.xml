<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_ocr_invoice_form" model="ir.ui.view">
    <field name="name">ocr.invoice.form</field>
    <field name="model">ocr.document</field>
    <field name="arch" type="xml">
      <form string="Upload Invoice">
        <sheet>
          <group>
            <field name="doc_type" readonly="1"/>
            <field name="name"/>
            <field name="file" required="1"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
