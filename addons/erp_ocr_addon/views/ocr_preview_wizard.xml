<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_ocr_preview_wizard_form" model="ir.ui.view">
        <field name="name">ocr.preview.wizard.form</field>
        <field name="model">ocr.preview.wizard</field>
        <field name="arch" type="xml">
            <form string="Preview Extracted Data">

                <group>
                    <span class="o_form_label">This is a placeholder preview screen.</span>
                </group>

                <footer>
                    <button string="Confirm"
                            type="object"
                            name="action_confirm"
                            class="btn-primary"/>

                    <button string="Cancel"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>

            </form>
        </field>
    </record>
</odoo>
